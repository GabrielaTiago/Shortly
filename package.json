{
  "name": "shortly",
  "type": "module",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon -L src/server.js",
    "docker:dev": "docker-compose up --build",
    "docker:stop": "docker-compose stop",
    "docker:down": "docker-compose down -v",
    "docker:destroy": "docker-compose down -v --rmi all",
    "docker:test": "docker-compose run --rm shortly-api npm test",
    "docker:test:watch": "docker-compose run --rm shortly-api npm run test:watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --coverage --verbose --watchAll"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.7.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
